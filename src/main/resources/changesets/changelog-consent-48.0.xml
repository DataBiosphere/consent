<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="grushton" id="48.0-1">
        <addColumn tableName="dacuser">
            <column name="email_preference" type="boolean" defaultValueBoolean="true" />
        </addColumn>
    </changeSet>
    <changeSet author="grushton" id="48.0-2">
        <sql>
            update dacuser set email_preference = true where dacUserId in (select distinct user_id from user_role where email_preference = true)
        </sql>
    </changeSet>

</databaseChangeLog>
