<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="grushton" id="134">
        <addColumn tableName="user_role">
            <column name="user_role_id"
                    type="int"
                    autoIncrement="true"
                    incrementBy="1" />
        </addColumn>
        <dropPrimaryKey tableName="user_role"/>
        <addPrimaryKey columnNames="user_role_id"
                       tableName="user_role"/>
        <renameColumn newColumnName="role_id"
                      oldColumnName="roleId"
                      tableName="user_role"/>
        <renameColumn newColumnName="user_id"
                      oldColumnName="dacUserId"
                      tableName="user_role"/>
        <addColumn tableName="user_role">
            <column name="dac_id"
                    type="int"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="dac_id"
                                 baseTableName="user_role"
                                 constraintName="fk_user_role_dac_id"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="dac_id"
                                 referencedTableName="dac"/>
    </changeSet>

</databaseChangeLog>
