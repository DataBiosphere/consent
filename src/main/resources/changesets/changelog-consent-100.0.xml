<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="100.0" author="qhoque">
        <addColumn tableName="email_entity">
            <column name="sendgrid_response" type="text"/>
            <column name="sendgrid_status" type="integer" defaultValue="null"/>
            // todo: default value of date_sent for existing records
            <column name="create_date" type="date" defaultValue="date_sent"??/>
        </addColumn>
        <sql>
        <!-- Populate date_sent column on email_entity table
                 with date_sent value for existing records -->
            UPDATE email_entity e SET create_date = date_sent;
        </sql>
    </changeSet>
</databaseChangeLog>
