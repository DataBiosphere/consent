<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="diegogil" id="116">
        <addColumn tableName="election">
            <column name="archived" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="election">
            <column name="version" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="diegogil" id="117">
        <addUniqueConstraint columnNames="referenceId,version" tableName="election"
                             deferrable="false" initiallyDeferred="false"/>
    </changeSet>

</databaseChangeLog>